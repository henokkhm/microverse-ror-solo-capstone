<header>
  <svg
    xmlns="http://www.w3.org/2000/svg"
    viewBox="0 0 24 24"
    fill="none"
    stroke="#ffffff"
    stroke-width="2"
    stroke-linecap="round"
    stroke-linejoin="round"
  >
    <line x1="3" y1="12" x2="21" y2="12"></line>
    <line x1="3" y1="6" x2="21" y2="6"></line>
    <line x1="3" y1="18" x2="21" y2="18"></line>
  </svg>

  <h1>My Categories</h1>
  <%= button_to "Sign out", destroy_user_session_path, method: :delete %> 
</header>

<main>
  <%= link_to 'Add New Category', new_category_path %>
  
  <% if @categories.any? %>
    <ul>
      <% @categories.each do |category| %>
        <li>
          <%= link_to category do %>
            <%= image_tag category.icon_url, alt: 'Category Icon' %>
            <%= link_to category.name, category %>
            <%= link_to 'Edit', edit_category_path(category) %>
            <%= link_to 'Delete', category, method: :delete, data: { confirm: 'Are you sure you want to delete this category?' } %>
          <% end %>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p>You have no categories yet.</p>
  <% end %>
</main>

