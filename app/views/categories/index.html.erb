<header class="category-header">
  <svg
    xmlns="http://www.w3.org/2000/svg"
    viewBox="0 0 24 24"
    fill="none"
    stroke="#ffffff"
    stroke-width="2"
    stroke-linecap="round"
    stroke-linejoin="round"
    class="hamburger-icon"
  >
    <line x1="3" y1="12" x2="21" y2="12"></line>
    <line x1="3" y1="6" x2="21" y2="6"></line>
    <line x1="3" y1="18" x2="21" y2="18"></line>
  </svg>

  <h1>My Categories</h1>
  <%= button_to "Sign out", destroy_user_session_path, method: :delete, class: 'sign-out-btn' %> 
</header>

<main>
  <% if @categories.any? %>
    <ul class="items-list">
      <% @categories.each do |category| %>
        <li>
          <%= link_to category do %>
            <span><%= category.icon %></span>
            <%= link_to category.name, category %>
            <%= link_to 'Edit', edit_category_path(category) %>
            <%= link_to 'Delete', category, method: :delete, data: { confirm: 'Are you sure you want to delete this category?' } %>
          <% end %>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p class="p-1">You have not added any categories yet.</p>
  <% end %>
  <div class="green-btn-wrapper fixed-bottom">
    <%= link_to 'Add New Category', new_category_path, class: "btn green-btn" %>
  </div>
</main>

