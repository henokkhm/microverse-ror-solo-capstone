<header>
  <%= link_to 'Back', categories_path %>
  <h1><%= @category.name %></h1>
  <%= button_to "Sign out", destroy_user_session_path, method: :delete %> 
</header>

<main>
  <div>
    <span>
      <%= @category.icon %>
    </span>
    <h2>Expenses</h2>
    <div>
      <span>Total</span>
      <span>$ <%= @expenses_sum %></span>
    </div>
    <div>  
      <%= link_to 'Edit Category', edit_category_path(@category) %> 
      <%= link_to 'Delete Category', category, method: :delete, data: { confirm: 'Are you sure you want to delete this category and all its expenses?' } %>
    </div>
  </div>

  <% if @expenses.any? %>
    <ul>
      <% @expenses.each do |expense| %>
        <li>
          <span><%= expense.name %></span>
          <span>$ <%= expense.amount %></span>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p>No expenses in this category.</p>
  <% end %>
</main>
